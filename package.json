{
  "name": "auction-house",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/css/styles.css -o ./public/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./src/css/styles.css -o ./public/styles.css --watch",
    "build": "npm run build:css",
    "dev": "npm-run-all --parallel watch:css start",
    "start": "node scripts/serve.js"
  },
  "devDependencies": {
    "autoprefixer": "10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.14"
  }
}
